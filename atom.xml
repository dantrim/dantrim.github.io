</span><span class='line'>  <span class="na">background</span><span class="o">:</span> <span class="mh">#ffffff</span> <span class="nv">$noise-bg</span> <span class="nv">!important</span><span class="p">;</span>
</span><span class='line'>  <span class="na">color</span><span class="o">:</span> <span class="nv">$base1</span> <span class="nv">!important</span><span class="p">;</span>
